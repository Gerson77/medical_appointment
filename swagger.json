{
    "openapi": "3.0.0",
    "info": {
        "title": "Serviço de agendamento de consulta",
        "description": "Essa API é responsável pelo agendamento de consultas",
        "version": "1.0.0"
    },
    "paths": {
        "/specialities": {
            "post": {
                "tags": [
                    "Speciality"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Cadastro de especialidades",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SpecialityRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SpecialityResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "Autenticação do usuário",
                "tags": ["users"],

                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200":{
                        "description": "Token gerado"
                    },
                    "401": {
                        "description": "mensagem de erro"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SpecialityRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descriçaõ da especialidade",
                        "example": "DESCRIPTION_TEST"
                    }
                },
                "required": [
                    "name",
                    "description"
                ]
            },
            "SpecialityResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descriçaõ da especialidade",
                        "example": "DESCRIPTION_TEST"
                    },
                    "id": {
                        "type": "string",
                        "description": "id da especialidade cadastrada",
                        "format": "uuid"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Data de criação da especialidade",
                        "format": "date"
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "Username de login",
                        "example": "Username_test"
                    },
                    "password": {
                        "type": "string",
                        "description": "Password de login",
                        "example": "Password_test"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "description": "Autenticação da API",
                "type": "http",
                "scheme": "bearer",
                "bearFormat": "JTW",
                "tokenUrl": "http://localhost:3000/login"
            }
        }
    }
}